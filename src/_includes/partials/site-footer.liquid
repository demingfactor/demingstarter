<footer class="flex justify-center">
    <div class="flex flex-col sm:flex-row justify-between items-center w-full h-24 p-4 max-w-screen-2xl">
        <a class="italic flex gap-1" href="{{site.general.legal-info}}">{{site.general.copyright}}</a>
        <div>
            {% for link in navigation.footer %}
                <a href="{{link.url}}">{{link.text}}</a>
                {% assign lastlink = navigation.footer | last%}
                {% unless link == lastlink %}
                    <span>|</span>
                {% endunless %}
            {% endfor %}
        </div>
    </div>
</footer>